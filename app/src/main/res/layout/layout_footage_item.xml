<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_seperator_video_frame_item"
    android:padding="@dimen/dimen_8">

    <ImageView
        android:layout_width="100dp"
        android:id="@+id/imgAtFootageItem"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_7"
        android:visibility="gone"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgAtFootageItem"
        android:text="title"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/dimen_3"
        android:id="@+id/tvForHeadingAtITem"
        app:fontFamily="sans-serif-medium" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgAtFootageItem"
        android:text="5:06 pm"
        android:visibility="gone"
        android:textSize="14sp"
        android:layout_marginBottom="@dimen/dimen_3"
        android:layout_below="@id/tvForHeadingAtITem"
        android:id="@+id/tvForTimeStampAtITem"
        app:fontFamily="sans-serif" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgAtFootageItem"
        android:text="2 sec"
        android:textColor="@color/login_image_grey_dark"
        android:textSize="11sp"
        android:layout_marginBottom="@dimen/dimen_3"
        android:layout_below="@id/tvForTimeStampAtITem"
        android:id="@+id/tvForMotionDurationAtITem"
        app:fontFamily="sans-serif" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgAtFootageItem"
        android:text="Detected :"
        android:textSize="11sp"
         android:layout_below="@id/tvForMotionDurationAtITem"
        android:id="@+id/tvForEntityLabel"
        app:fontFamily="sans-serif" />

    <com.google.android.flexbox.FlexboxLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        android:layout_margin="@dimen/dimen_5"
        android:layout_below="@id/tvForEntityLabel"
        app:alignItems="stretch"
        android:id="@+id/flexlayoutForLabels"
        app:alignContent="stretch" />




</RelativeLayout>
